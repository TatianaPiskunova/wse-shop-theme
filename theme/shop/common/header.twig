<!-- Start Header Area -->
<header class="header-wrapper header-theme-colored">
    <div class="header-top d-none d-lg-block">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="header-top-inner">
                        <div class="header-top-action-area"></div>
                        <div class="header-top-info">
                            <div class="info-mail">
                                <a href="mailto://Support@posthemes.com"> Support@posthemes.com </a>
                            </div>
                            <div class="info-map">
                                <a href="/contacts"> Store Locator </a>
                            </div>

                            <div class="header-action-dropdown-acc header-action-dropdown-toggle">
                                <span class="current-item">My Account</span>
                                <ul class="info-dropdown info-dropdown-toggle">
                                    {% include 'common/user-switch.twig' %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-middle">
        <div class="header-resmobile d-block d-lg-none">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-4 col-sm-4 col-3">
                        <div class="header-action-area btn-action-menu">
                            <button class="btn-menu d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithSideMenu" aria-controls="offcanvasWithSideMenu">
                                <i class="ion-navicon"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-6">
                        <div class="header-logo-area">
                            <a href="/">
                                <img class="logo-main" src="/resource/img/logo-light.jpg" alt="Logo" width="168" height="57"/>
                                <img class="logo-light" src="/resource/img/logo-light.jpg" alt="Logo" width="168" height="57"/>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-3">
                        <div class="header-middle-action-area">
                            <div class="header-action-dropdown-acc header-action-dropdown-toggle">
                                <span class="current-item"><i class="icon-user"></i></span>
                                <ul class="info-dropdown info-dropdown-toggle">
                                    {% include 'common/user-switch.twig' %}
                                </ul>
                            </div>
                            <div class="header-action-cart header-minicart">
                                <a class="btn-cart cart-icon" href="/cart">
                                    <a href="/cart" class="main-btn btn-cart cart-icon">
                                        <i class="icon-bag"></i>
                                        <span class="cart-count" data-catalog-cart-count></span>
                                    </a>
                                </a>

                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="header-search-box">
                            {% include 'common/header-search.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container d-none d-lg-block">
            <div class="row align-items-center">
                <div class="col-3">
                    <div class="header-logo-area">
                        <a href="/">
                            <img class="logo-main" src="/resource/img/logo-light.jpg" alt="Logo" width="168" height="57"/>
                            <img class="logo-light" src="/resource/img/logo-light.jpg" alt="Logo" width="168" height="57"/>
                        </a>
                    </div>
                </div>
                <div class="col-9">
                    <div class="header-middle-right">
                        <div class="header-search-box">
                            {% include 'common/header-search.twig' %}
                        </div>
                        <div class="header-middle-action-area">
                            <div class="header-action-btn-search">
                                <button class="btn-search btn-search-menu">
                                    <i class="icon-magnifier"></i>
                                </button>
                            </div>
                            <div class="header-action-cart header-minicart">
                                <a href="/cart" class="main-btn btn-cart cart-icon">
                                   <i class="icon-bag"></i>
                                   <span class="cart-count" data-catalog-cart-count></span>
                                </a>
                            </div>
                            <div class="header-action-area">
                                <button class="btn-menu d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithSideMenu" aria-controls="offcanvasWithSideMenu">
                                    <i class="icon-menu"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-area header-default sticky-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-6 col-sm-5 col-md-4 col-lg-3">
                    <div class="vertical-menu">
                        {% include 'common/header-navigation.twig' with {'categories': catalog_category()} %}
                    </div>
                </div>
                <div class="col-lg-7 d-none d-lg-block">
                    <div class="header-navigation-area">
                        {% include 'common/menu.twig' %}
                    </div>
                </div>
                <div class="col-6 col-sm-7 col-md-8 col-lg-2">
                    <div class="header-action-main-area">
                        <div class="header-action-btn-search">
                            <button class="btn-search btn-search-menu">
                                <i class="icon-magnifier"></i>
                            </button>
                        </div>

                        <div class="header-action-cart header-minicart">
                            <a href="/cart" class="main-btn btn-cart cart-icon">
                                <i class="icon-bag"></i>
                                <span class="cart-count" data-catalog-cart-count></span>
                            </a>
                        </div>
                        <div class="header-action-area">
                            <button class="btn-menu d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithSideMenu" aria-controls="offcanvasWithSideMenu">
                                <i class="icon-menu"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="search-box-wrapper">
    <div class="search-box-content-inner">
        <div class="search-box-form-wrap">
            <div class="search-note">
                <p>Start typing and press Enter to search</p>
            </div>

            <form action="/search" method="post">
                <div class="search-form position-relative">
                    {% include 'mixin/form.twig' with {
                        'type': 'text',
                        'name': 'q',
                        'args': {
                            'required': true,
                            'value': _request.q,
                            'placeholder': 'Search',
                            'class':['form-control'],
                        }
                    } %}
                    <button type="submit" class="search-button">
                        <i class="icon-magnifier"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!--== End Aside Search Menu ==-->
    <a href="javascript:;" class="search-close"><i class="ion-close-round"></i></a>
</div>

<aside class="off-canvas-area offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasWithSideMenu">
    <div class="offcanvas-top">
        <div class="header-top-info">
            <div class="info-mail">
                <a href="mailto://Support@posthemes.com"> Support@posthemes.com </a>
            </div>
            <div class="info-map">
                <a href="/contacts"> Store Locator </a>
            </div>
            <div class="header-action-myaccount">
                <div class="header-action-dropdown-acc header-offcanvas-dropdown-toggle">
                    <span class="current-item">My Account</span>
                    <ul class="info-dropdown info-dropdown-offcanvas-toggle">
                        {% include 'common/user-switch.twig' %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="offcanvas-header">
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close">Menu <i class="ion-android-arrow-back"></i></button>
    </div>
    <div class="offcanvas-body">
        <!-- Start Mobile Menu Wrapper -->
        <div class="res-mobile-menu">
            <nav id="offcanvasNav" class="offcanvas-menu">
                <ul>
                    {% include 'common/menu-OffCanvas.twig' %}
                    {% include 'common/header-navigation-Offcanvas.twig' %}
                </ul>
            </nav>
        </div>
        <!-- End Mobile Menu Wrapper -->
    </div>
</aside>

<!-- End Header Area -->
