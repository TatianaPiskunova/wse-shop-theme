{% extends 'main.twig' %}

{% block title %}Registration | {{ parent() }}{% endblock %}

{% block page %}
    {% include 'common/breadcrumbs.twig' with {
        'title': 'Register'
    } %}
<div class="row justify-content-center mt-50 ">
    <div class="col-8">
        <div class="login-register-content login-register">
            <div class="login-register-title mb-30">
                <h2>No Account? Register</h2>
                <p>Registration takes less than a minute but gives you full control over your orders.</p>
            </div>
            <div class="login-register-style">
                <form class="row" method="post">
                    <div class="login-register-input">
                            {% include 'mixin/form.twig' with {
                                'label': 'First Name',
                                'type': 'text',
                                'name': 'firstname',
                            } %}
                    </div>
                    <div class="login-register-input">
                            {% include 'mixin/form.twig' with {
                                'label': 'Last name',
                                'type': 'text',
                                'name': 'lastname',
                            } %}
                    </div>
                    <div class="login-register-input">
                        {% include 'mixin/form.twig' with {
                            'label': 'E-Mail',
                            'type': 'email',
                            'name': 'email',
                        } %}
                    </div>
                    <div class="login-register-input">
                        {% include 'mixin/form.twig' with {
                            'label': 'Username',
                            'type': 'text',
                            'name': 'username',
                        } %}
                    </div>
                    <div class="login-register-input">
                        {% include 'mixin/form.twig' with {
                            'label': 'Phone',
                            'type': 'tel',
                            'name': 'phone',
                        } %}
                    </div>
                    <div class="login-register-input">
                        {% include 'mixin/form.twig' with {
                            'label': 'Password',
                            'type': 'password',
                            'name': 'password',
                        } %}
                    </div>
                    <div class="login-register-input">
                        {% include 'mixin/form.twig' with {
                            'label': 'Confirm Password',
                            'type': 'password',
                            'name': 'password_again',
                        } %}
                    </div>
                    <div class="login-register-paragraph" >
                        <p>Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our <a href="#">privacy policy.</a></p>
                    </div>
                    <div class="btn-style-3 mb-30">
                        <button class="btn" type="submit">Register</button>
                    </div>
                    <p class="outer-link">
                        Already have an account? <a href="/user/login">Login Now</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
