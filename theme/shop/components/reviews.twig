{% set allReviews=guestbook() %}

<section class="testimonial-area testimonial-default-area bg-img" data-bg-img="/resource/img/large.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-6 m-auto">
                <div class="section-title text-center">
                    <h2 class="title">Client Feedback</h2>
                    <div class="desc">
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="swiper-container testimonial-slider-container">
                    <div class="swiper-wrapper">
                        {% for review in allReviews %}
                        <div class="swiper-slide" >
                            <div class="testimonial-item d-flex flex-column justify-content-between">
                                <p>{{ review.message }}</p>
                                <div>
                                    <h4 class="text-end "><i class="fa-regular fa-user"></i> {{ review.name }}</h4>
                                    <h4 class="text-end ">{{ review.date|date("d.m.Y") }}</h4>
                                    <h6 class="text-start fst-italic">{{ review.response }}</h6>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .testimonial-item {
        height: 220px;
    }
</style>